<%= render "/layouts/errors", :object => @user %>

<%= form_for(@user) do |f| %>
	<div class="form-group">
		<%= f.label :email %>
		<%= f.text_field :email %>
		<%= f.label :password %>
		<%= f.password_field :password %>
		<%= f.label :password_confirmation %>
		<%= f.password_field :password_confirmation %>
	</div >
	<%= f.submit(:class => "btn btn success") %> 
<% end %>